<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.mediaplayereasv.EditPlaylistController">
    <children>
        <!-- Playlist Name Label -->
        <Label fx:id="lblPlaylistName" layoutX="20" layoutY="20" style="-fx-font-size: 18;" />

        <!-- Available Songs List -->
        <VBox alignment="CENTER" layoutX="20.0" layoutY="60.0" prefHeight="300" prefWidth="260">
            <Label style="-fx-font-size: 14;" text="Available Songs" />
            <ListView fx:id="lvAvailableSongs" />
            <Button onAction="#onAddSongClicked" text="Add Song">
            <VBox.margin>
               <Insets right="190.0" top="5.0" />
            </VBox.margin></Button>
        </VBox>

        <!-- Songs in Playlist -->
        <VBox alignment="CENTER" layoutX="320.0" layoutY="60.0" prefHeight="300" prefWidth="260">
            <Label style="-fx-font-size: 14;" text="Songs in Playlist" />
            <ListView fx:id="lvSongsInPlaylist" />
            <Button onAction="#onRemoveSongClicked" text="Remove Song">
            <VBox.margin>
               <Insets left="170.0" top="5.0" />
            </VBox.margin></Button>
        </VBox>
    </children>
</AnchorPane>
